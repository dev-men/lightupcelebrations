
<% content_for :title, "Customers" %>
<div class="container-fluid">
  <div class="row">
    <div class="col-md-12">
      <div class="row login_signup_heading" style="padding:0px;margin:0px;">
        <div class="col-md-12">
          <center><h2 class="heading_text">Listing All Customers</h2></center>
        </div>
      </div>
      <div class="jumbotron" style="padding-top:1em;padding-bottom:1em; background-color: rgba(26,188,156,0.7); border-radius:0 0 1em 1em;">
        <div class="row">
          <div class="col-md-12 login_signup_panel">
            <table class="table table-dark" style="color:#FFFFFF;">
              <thead>
                <tr>
                  <th>ID</th>
                  <th>Email</th>
                  <th>Registered At</th>
                  <th>Name</th>
                  <th>CNIC</th>
                  <th>Number</th>
                </tr>
              </thead>
              <tbody>
                <% @customers.each do |c|%>
                  <tr>
                    <td><%= c.user.id%></td>
                    <td><%= c.user.email%></td>
                    <td><%= c.user.created_at%></td>
                    <td><%= c.name%></td>
                    <td><%= c.cnic%></td>
                    <td><%= c.number%></td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
