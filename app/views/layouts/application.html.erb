<!DOCTYPE html>
<html>
  <head>
    <title>Lightupcelebration</title>
    <%= csrf_meta_tags %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <meta content="IE=edge,chrome=1" http-equiv="X-UA-Compatible">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <link href="https://fonts.googleapis.com/css?family=Libre+Baskerville:700|Merriweather:700" rel="stylesheet">
  </head>

  <body style="background:#D5D6D6;padding-top:4em;">
      <nav class="navbar navbar-expand-sm navbar-light navbar-fixed-top" style="background-color: rgba(25,205,215,0.95);" role="navigation">
        <div class="container" style="margin-top: 20px;">
          <div class="navbar-header">
            <button class="navbar-toggle" data-target="#mainNavCollapse" data-toggle="collapse" type="button">
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
            </button>

          </div>
          <div class="collapse navbar-collapse" id="mainNavCollapse">
            <ul class="navbar-nav navbar-right">
              <% if admin_signed_in? %>
                <li><%= link_to  "Logout", destroy_admin_session_path, method: :delete %></li>
              <%else%>
                <li><%= link_to  "Login", new_admin_session_path %></li>
                <li><%= link_to  "Signup", new_admin_registration_path %></li>
              <%end%>
            </ul>
          </div>
        </div>
      </nav>

      <% if notice %>
        <div id="notice_wrapper" class="my_notice">
          <center><p class="app_notice"><%= notice %></p></center>
        </div>
      <%elsif alert %>
        <div id="notice_wrapper" class="my_alert">
          <center><p class="app_alert"><%= alert %></p></center>
        </div>
      <% end %>
      <%= yield %>
    </body>
  </html>
