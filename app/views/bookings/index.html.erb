<% content_for :title, "Bookings" %>
<div class="container-fluid" style="margin-top:1em;">
  <div class="row">
    <div class="col-md-12">
      <div class="row login_signup_heading" style="padding:0px;margin:0px;">
        <div class="col-md-12">
          <center><h2 class="heading_text">Listing All Bookings</h2></center>
        </div>
      </div>
      <div class="jumbotron" style="padding-top:1em;padding-bottom:1em; background-color: rgba(26,188,156,0.7); border-radius:0 0 1em 1em;padding:0px;margin:0px;">
        <div class="row" style="padding:0px;margin:0px;">
          <div class="col-md-12 login_signup_panel">
            <table class="table table-dark" style="color:#FFFFFF;">
              <thead>
                <tr>
                  <th>ID</th>
                  <th>Booking Date</th>
                  <th>Start Time</th>
                  <th>End Time</th>
                  <th>Location</th>
                  <th>Customer Name</th>
                  <th>Detail</th>
                  <th>Delete</th>
                </tr>
              </thead>
              <tbody>
                <% @bookings.each do |booking| %>
                  <tr>
                    <td><%= booking.id %></td>
                    <td><%= booking.day %></td>
                    <td><%= booking.start.strftime("%H:%M %S %p") %></td>
                    <td><%= booking.end.strftime("%H:%M %S %p") %></td>
                    <td><%= booking.location %></td>
                    <td><%= booking.user.name %></td>
                    <td><%= link_to 'Show', booking, class:"btn btn-block btn-success" %></td>
                    <td><%= link_to 'Destroy', booking, method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn-block btn-danger" %></td>
                  </tr>
                <%end%>
              </tbody>
            </table>
          </div>
          <center><%= will_paginate @bookings, renderer: BootstrapPagination::Rails %></center>
        </div>
      </div>
    </div>
  </div>
</div>
