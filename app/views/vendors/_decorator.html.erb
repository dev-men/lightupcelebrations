<div class="col-md-12">
  <h3 class="heading_text">Listing All Decorators Profile</h3>
</div>
<br><br><br>
<% @decorator = @vendor.decorators%>
<% @decorator.each do |h|%>
  <div class="row login_signup_panel" style="padding-top:2em;padding-left:1em;padding-right:1em;">
    <div class="col-md-12 col-xs-12">
      <div class="row">
        <div class="col-md-4 col-xs-12">
          <label class="key">Company Name: </label> <label class="value"><%= h.compnay_name%></label>
        </div>
        <div class="col-md-4 col-xs-12">
          <label class="key">Theme: </label> <label class="value"><%= h.theme%></label>
        </div>
        <div class="col-md-4 col-xs-12">
          <label class="key">City: </label> <label class="value"><%= h.city%></label>
        </div>
        <div class="col-md-12 col-xs-12">
          <label class="key">Address Line 1: </label> <label class="value"><%= h.address_line_1%></label>
        </div>
        <div class="col-md-12 col-xs-12">
          <label class="key">Address Line 2: </label> <label class="value"><%= h.address_line_2%></label>
        </div>


        <div class="col-md-4 col-xs-12">
          <label class="key">Budget of Mayo: </label> <label class="value"><%= h.mayo%></label>
        </div>
        <div class="col-md-4 col-xs-12">
          <label class="key">Budget of Mehndi: </label> <label class="value"><%= h.mehndi%></label>
        </div>
        <div class="col-md-4 col-xs-12">
          <label class="key">Budget of Barat: </label> <label class="value"><%= h.barat%></label>
        </div>
        <div class="col-md-4 col-xs-12">
          <label class="key">Budget of Walima: </label> <label class="value"><%= h.walima%></label>
        </div>
        <div class="col-md-4 col-xs-12">
          <label class="key">Budget of Birthday Party: </label> <label class="value"><%= h.party%></label>
        </div>
        <div class="col-md-4 col-xs-12">
          <label class="key">Budget of Other: </label> <label class="value"><%= h.other%></label>
        </div>


      </div>

    </div>
    <div class="col-md-4 col-xs-12">
      <% if h.image1? %>
        <%= image_tag(h.image1, class:"img-responsive img-thumbnail", style:"width:100%;height:220px;")%>
      <%else%>
        <%= image_tag('hall.png', class:"img-responsive img-thumbnail", style:"width:100%;height:220px;")%>
      <%end%>
    </div>
    <div class="col-md-4 col-xs-12">
      <% if h.image2? %>
        <%= image_tag(h.image2, class:"img-responsive img-thumbnail", style:"width:100%;height:220px;")%>
      <%else%>
        <%= image_tag('hall.png', class:"img-responsive img-thumbnail", style:"width:100%;height:220px;")%>
      <%end%>
    </div>
    <div class="col-md-4 col-xs-12">
      <% if h.image3? %>
        <%= image_tag(h.image3, class:"img-responsive img-thumbnail", style:"width:100%;height:220px;")%>
      <%else%>
        <%= image_tag('hall.png', class:"img-responsive img-thumbnail", style:"width:100%;height:220px;")%>
      <%end%>
    </div>

    <div class="col-md-12">
      <div class="row" style="margin-top: 1em;">
        <div class="col-md-5 col-xs-12"></div>
        <div class="col-md-2 col-xs-12">
          <% if h.approve == false%>
            <%= link_to "Approve", approve_vendor_vendor_path(id: h.id, vendor_role: 3), class:"btn btn-success btn-block", style:"color:#FFFFFF;font-weight:bold;font-family: 'Merriweather', serif;"%>
          <%end%>
        </div>
        <div class="col-md-5 col-xs-12"></div>
      </div>
    </div>
  </div>

<%end%>
